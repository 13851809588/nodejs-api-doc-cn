{
    "output": "./_book/",
    "generator": "site",
    "language": "zh",
    "plugins": [
        "-lunr",
        "-search",
        "-sharing",
        "fontsettings",
        "github",
        "regexplace"
    ],
    "pluginsConfig": {
        "github": {
            "url": "https://github.com/amery2010/nodejs-api-book"
        },
        "regexplace": {
            "substitutes": [
                {
                    "pattern": ".md#",
                    "flags": "g",
                    "substitute": ".html#"
                }
            ]
        }
    },
    "pdf": {
        "fontSize": 14,
        "paperSize": "a4",
        "margin": {
            "right": 62,
            "left": 62,
            "top": 36,
            "bottom": 36
        },
        "headerTemplate": null,
        "footerTemplate": null
    }
}
